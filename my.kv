    

<MainScreen>:
    name: "main"
        
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            id: counter_label
            text: root.labeltxt
            font_style: "Display"
            role: "medium"
            halign: "center"
            size_hint: (1, 0.2)
        
        MDDivider:

        Image:
            id: bg_image
            size_hint: (1, 0.5)

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.3)
        padding: dp(40)
        spacing: dp(140)

        MDFabButton:
            icon: "plus"
            on_release: root.increment()
        MDFabButton:
            icon: "folder"
            on_release: root.open_file_manager()
        MDFabButton:
            icon: "minus"
            on_release: root.decrement()

