    

<MainScreen>:
    name: "main"
        
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            id: counter_label
            text: root.labeltxt
            font_style: "Display"
            role: "medium"
            halign: "auto"

        Image:
            id: bg_image
            source: root.bg_source
            size_hint: (1, 0.7)

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.2)

        MDFabButton:
            icon: "plus"
            #size: "large"
            on_release: root.increment()
        MDFabButton:
            icon: "folder"
            #size: "large"            
            on_release: root.open_file_manager()
        MDFabButton:
            icon: "minus"
            #size: "large"            
            on_release: root.decrement()

